@model Curso

@{
    ViewData["Title"] = "Edición Curso";
    Layout="Simple";
}

<section id="portafolio" class="portfolio">
    <div class="Container">
        <h2>@ViewData["Title"]</h2>     
        <article class="project">
            <form class="Formulario" method="POST">
                <div asp-validation-summary="All"></div>
                <div class="Form-Campos">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre"/>
                </div>
                <div class="Form-Campos">
                    <label asp-for="Direccion"></label>
                    <input asp-for="Direccion"/>
                </div>
                <div class="Form-Campos">
                    <label asp-for="Jornada"></label>
                    @Html.DropDownList("Jornada",Html.GetEnumSelectList<TiposJornada>(),
                                        "Seleccione Jornada",
                                        new {@class ="form-control"}            
                                        )
                </div>
                <div class="Form-Campos">
                    <button type="submit">Enviar</button>
                </div>
            </form>
        </article>
    </div>
</section>