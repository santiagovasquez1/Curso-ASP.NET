@* @model ObjetoEscuelaBase *@

<section id="portafolio" class="portfolio">
    <div class="Container">
        <h2>@ViewData["Title"]</h2>       
        <p><i>@ViewBag.Fecha</i></p>
        <article class="project">
                <div class="project-details">          
                    <h3>Nombre : @Model.Nombre </h2>
                    <p><i>Curso ID : @Model.Id</i></p>
                    <p class="project-description">@Model.Descripicion</p>                
                    @if(Model is Curso)  
                    {                 
                        <p class="project-description">Dirección : @Model.Direccion</p>   
                        <p class="project-description">Jornada : @Model.Jornada</p>                        
                    }
                </div>
        </article>
    </div>
</section>
