@* @model List<ObjetoEscuelaBase> *@

@{
    string controller = "Escuela";
}

<div class="Container">
    <table class="tablaEscuela">
        <thead>
            <tr>
                <th class="encabezado" scope="col">Nombre</th>
                <th class="encabezado" scope="col">Id</th>
                <th class="encabezado" scope="col">imagen</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var ObjetoEscuela in Model)
            {   
                @if(ObjetoEscuela is Alumno)
                {
                    controller ="Alumno";
                }
                 @if(ObjetoEscuela is Asignatura)
                {
                    controller ="Asignatura";
                }
                 @if(ObjetoEscuela is Curso)
                {
                    controller ="Curso";
                }

                <tr>
                    <td>@ObjetoEscuela.Nombre</td>
                    <td>@ObjetoEscuela.Id</td>
                    <td>
                        @Html.ActionLink("Detalles",@"Index",new{id=ObjetoEscuela.Id})
                    </td>
                    <td>
                        <div class="table-edicion">
                            <a  asp-controller=@controller
                                asp-action="index"
                                asp-route-id=@ObjetoEscuela.Id
                                class="btn btn-secondary btn-sm ml-2">
                                Detalles
                            </a>
                            <a  asp-controller=@controller
                                asp-action="edit"
                                asp-route-id=@ObjetoEscuela.Id
                                class="btn btn-info btn-sm ml-2">
                                Editar
                            </a>
                            <a  asp-controller=@controller
                                asp-action="delete"
                                asp-route-id=@ObjetoEscuela.Id
                                class="btn btn-danger btn-sm ml-2">
                                Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


